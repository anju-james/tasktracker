<h2>Show User</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

   <li>
     <strong>Role:</strong>
     <%= @user.role %>
   </li>

   <li>
     <strong>Manager:</strong>
     <%= if @user.manager_id, do: @manager.name , else: "No manager"%>
   </li>

</ul>

<span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: user_path(@conn, :index) %></span>
